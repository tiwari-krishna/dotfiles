#Multimedia and brightness
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86MonBrightnessUp
    xbacklight -inc 10%
XF86MonBrightnessDown
    xbacklight -dec 10%
Print
    scrot -s '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv ~/Screenshots'
XF86HomePage
    chromium
XF86AudioPrev
    mpc prev
XF86AudioNext
    mpc next
XF86AudioPlay
    mpc toggle
alt + Up
    pactl set-sink-volume @DEFAULT_SINK@ +5%
alt + Down
    pactl set-sink-volume @DEFAULT_SINK@ -5%
alt + shift + Left
    mpc prev
alt + shift + Right
    mpc next
alt + control + space
    mpc single
alt + shift + space
    mpc toggle
alt + Left
    mpc seek -10
alt + Right
    mpc seek +10

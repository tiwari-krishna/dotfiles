#!/bin/sh

Capacity="$(cat /sys/class/power_supply/BAT*/capacity)"
stat="$(cat /sys/class/power_supply/BAT*/status)"

case "$stat" in
		"Full") icon="ðŸ”‹" ;;
		"Discharging") icon="ðŸ”ƒ" ;;
		"Charging") icon="ðŸ”Œ" ;;
		"Not charging") icon="ðŸ›‘" ;;
		"Unknown") icon="ðŸ”—" ;;
		*) exit 1 ;;
	esac

echo "$icon$Capacity"
